set PATH $HOME/bin $HOME/.local/bin /opt/homebrew/bin $HOME/.pub-cache/bin $PATH

# shell
set SHELL (which fish)

# cargo
fish_add_path $HOME/.cargo/bin

# go
fish_add_path /usr/local/go/bin
fish_add_path $HOME/go/bin

# fzf
if type -q fzf_configure_bindings
  fzf_configure_bindings --directory=\cf
end

# node
fish_add_path $HOME/.nodenv/bin
if type -q nodenv
  nodenv init - | source
end

# deno
fish_add_path $HOME/.deno/bin

# pyenv
set PYENV_ROOT $HOME/.pyenv
fish_add_path $PYENV_ROOT/bin
if type -q pyenv
  pyenv init - | source
end

# 1password
if type -q op
  op completion fish | source
end

# starship
if not type -q starship
  sh -c "(curl -fsSL https://starship.rs/install.sh)"
end

starship init fish | source

# for WSL
{{if eq .chezmoi.os "linux" -}}
{{-   if (.chezmoi.kernel.osrelease | lower | contains "microsoft") -}}
fish_add_path $HOME/bin
fish_add_path $HOME/.krew/bin
fish_add_path $HOME/isito-1.13.4/bin

set JAVA_HOME /usr/lib/jvm/java-11-openjdk-amd64
fish_add_path $JAVA_HOME/bin
set ANDROID_HOME $HOME/Android/SDK
fish_add_path $ANDROID_HOME/cmdline-tools/latest/bin
fish_add_path $ANDROID_HOME/platform-tools
fish_add_path $ANDROID_HOME/emulator
fish_add_path $ANDROID_HOME/tools
fish_add_path $ANDROID_HOME/tools/bin
set FLUTTER_ROOT $HOME/flutter
fish_add_path $FLUTTER_ROOT/bin
set VOLTA_HOME $HOME/.volta
fish_add_path $VOLTA_HOME/bin

set -x BROWSER wslview
{{-   end -}}
{{- end}}

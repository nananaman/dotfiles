{
    "suggest.noselect": true,
    "suggest.preferCompleteThanJumpPlaceholder": true,

    "python.formatting.autopep8Args": [
      "--max-line-length", "120",
      "--ignore", "E402, E70"
    ],

    "html.autoClosingTags": true,

    "languageserver": {
      "golang": {
        "command": "gopls",
        "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
        "filetypes": ["go"]
      }
    }
}

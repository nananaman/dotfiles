{
  "permissions": {
    "allow": [
      "Bash(afplay:*)",
      "Bash(git:*)",
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(make:*)",
      "Bash(mise run:*)",
      "Read(**)"
    ],
    "deny": [],
    "additionalDirectories": [
      "~/obsidian"
    ]
  },
  "includeCoAuthoredBy": false,
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ]
  }
}
